<!DOCTYPE html>
<html>
<head>
  <title>Moje przepisy</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

  <div class="container">
    <h1>Moje przepisy</h1>
    
    <% if (recipes.length > 0) { %>
      <table class="table">
        <thead>
          <tr>
            <th>Nazwa</th>
            <th>Akcje</th>
          </tr>
        </thead>
        <tbody>
          <% recipes.forEach((recipe) => { %>
            <tr>
              <td><%= recipe.nazwa %></td>
              <td>
                <a href="/recipe/<%= recipe.id %>/json" class="btn btn-primary">Pobierz JSON</a> <!-- Add a "Download JSON" button -->
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>Brak przepisów do wyświetlenia.</p>
    <% } %>

  </div>

</body>
</html>
