        <option value="<%= category %>"> </option>
           <% }); %>
</datalist>

<h2>Dodaj produkt</h2>
<form action="/admin/addProduct" method="post">
    <div class="form-group">
        <label for="categoryInput">Wybierz kategorie</label>
        <input class="form-control" list="datalistCategories" id="categoryInput" name="categoryInput" placeholder="kategoria" autocomplete="off" required>
    </div>
    <div class="form-group">
        <label for="productInput">Nazwa produktu</label>
        <input type="text" class="form-control" id="productInput"  name="productInput" placeholder="produkt.." autocomplete="off" required>
    </div>
    <br>
    <button type="ZAPISZ" class="btn btn-primary">Submit</button>
</form>

